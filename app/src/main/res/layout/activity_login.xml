<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".Activity.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="650dp"
        android:contentDescription="TODO"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background_intro" />

    <EditText
        android:id="@+id/username1"
        android:layout_width="332dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:foregroundTint="#EDE7E7"
        android:hint="User name"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"
        android:textColor="#F3ECEC"
        android:textColorHint="#FFFDFD"></EditText>

    <EditText
        android:id="@+id/password1"
        android:layout_width="334dp"
        android:layout_height="73dp"
        android:layout_below="@+id/username1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:hint="password"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"></EditText>

    <Button
        android:id="@+id/btnsignin1"
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="132dp"
        android:background="#101010"
        android:backgroundTint="#151515"
        android:backgroundTintMode="multiply"
        android:hapticFeedbackEnabled="true"
        android:text="signIn"></Button>

</RelativeLayout>